@page
@model CreateModel
@{
    ViewData["Title"] = "Create Post";
}

<h1>Create Post</h1>

<form method="post">
    <div>
        <label for="Title">Title</label>
        <input type="text" id="Title" name="Post.Title" class="form-control" />
    </div>
    <div>
        <label for="ImageUrl">Image URL</label>
        <input type="text" id="ImageUrl" name="Post.ImageUrl" class="form-control" />
    </div>
    <div>
        <label for="TextContent">Text Content</label>
        <textarea id="TextContent" name="Post.TextContent" class="form-control"></textarea>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
